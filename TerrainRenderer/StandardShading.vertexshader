#version 330 core

// Input vertex data, different for all executions of this shader.
layout(location = 0) in float vertex;


uniform mat4 P;
uniform mat4 V;
uniform mat4 M;
uniform mat4 MVP;

out float ht;

void main()
{
    float x;
    float y; 
    x = (gl_VertexID%1201)/600.0f - 1;
    y = gl_VertexID/1201;
    
    y  = -y/600.0f + 1;
    //gl_Position = MVP * vec4(x, y, vertex ,1);
    gl_Position =  vec4(x, y, 0 ,1);
    ht = vertex;
}

